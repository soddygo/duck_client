{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA" },
        { "path": "$APPDATA/**/*" },
        { "path": "$HOME" },
        { "path": "$HOME/**/*" },
        { "path": "$DESKTOP" },
        { "path": "$DOCUMENT" },
        { "path": "$DOWNLOAD" }
      ]
    }
  ]
}
